#!/usr/bin/env node

"use strict";

const fs = require("fs");
const path = require("path");
const { pathToFileURL } = require("url");

const distPath = path.join(__dirname, "..", "dist", "feai.js");

if (!fs.existsSync(distPath)) {
  console.error("dist/feai.js not found. Run: bun run build");
  process.exit(1);
}

const distUrl = pathToFileURL(distPath).href;

import(distUrl).catch((error) => {
  console.error(`Failed to load ${distPath}: ${error.message}`);
  process.exit(1);
});
